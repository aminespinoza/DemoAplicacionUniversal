<Page
    x:Class="UniversalDemoApp.Views.XboxOne"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalDemoApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/Backgrounds/green-wallpaper.jpg"/>
        </Grid.Background>
        <Button x:Name="btnBack" Content="Volver" Height="35" Margin="10,10,0,0" VerticalAlignment="Top" BorderBrush="White" Foreground="White" HorizontalAlignment="Left" Click="btnBack_Click"/>

        <Button x:Name="btnWebSite" Content="Abrir sitio web" Height="35" Margin="10,162.5" VerticalAlignment="Center" BorderBrush="White" Foreground="White" HorizontalAlignment="Stretch" d:LayoutOverrides="LeftPosition, RightPosition" Click="btnWebSite_Click"/>

    </Grid>
</Page>
